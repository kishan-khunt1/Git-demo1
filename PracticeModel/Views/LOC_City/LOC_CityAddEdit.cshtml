        <div class="mb-3">
            <label for="CityCode" class="form-label">City Code</label>
            <input type="text" class="form-control" asp-for="CityCode" placeholder="Enter City Code" id="CityCode">
        </div>
        <div class="mb-3">
            <label for="StateID" class="form-label">State ID</label>
            <input type="text" class="form-control" asp-for="StateID" placeholder="Enter State ID" id="StateID">
        </div>
