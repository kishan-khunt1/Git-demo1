@{
    ViewData["Title"] = "CON_CountactAdd/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CON_ContactModel
<section style="position:relative;top:40px;">

    <div>
        <div>
            <h1>Insert/Edit Record</h1>
        </div>
        <form method="post" asp-controller="CON_Contact" asp-action="Save">
            @Html.HiddenFor(x=>x.ContactID)
            <div class="mb-3">
                <label for="ContactName" class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="ContactName" placeholder="Enter Your Name" id="ContactName">
            </div>
            <div class="mb-3">
                <label for="ContactMobileNo" class="form-label">Mobile No</label>
                <input type="text" class="form-control" asp-for="ContactMobileNo" placeholder="Enter Mobile No" id="ContactMobileNo">
            </div>
            <div class="mb-3">
                <label for="ContactAddress" class="form-label">Address</label>
                <input type="text" class="form-control" asp-for="ContactAddress" placeholder="Enter Your Address" id="ContactAddress">
            </div>
            <div class="mb-3">
                <label for="ContactEmail" class="form-label">Email</label>
                <input type="text" class="form-control" asp-for="ContactEmail" placeholder="Enter Your Email" id="ContactEmail">
            </div>
            <div class="mb-3">
                <label for="CountryID" class="form-label">Country Name</label>
                <select class="form-control" asp-for="CountryID" id="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))" onchange="fnonStateChange();">
                    <option value="">Select Country</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="StateID" class="form-label">State Name</label>
                <select class="form-control" asp-for="StateID" id="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))" onchange="fnonCityChange();">
                    <option value="">Select State</option>
                </select>
            </div>
            @*<div class="mb-3">
                <label for="ContactCreationDate" class="form-label">Creation Date</label>
                <input type="date" class="form-control" asp-for="ContactCreationDate" id="ContactCreationDate">
            </div>
            <div class="mb-3">
                <label for="ContactModificationDate" class="form-label">Modification Date</label>
                <input type="date" class="form-control" asp-for="ContactModificationDate" id="ContactModificationDate">
            </div>*@
            <div class="mb-3">
                <label for="CityID" class="form-label">City Name</label>
                <select class="form-control" asp-for="CityID" id="CityID" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">
                    <option value="">Select City</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="ContactCategoryID" class="form-label">Category Name</label>
                <select class="form-control" asp-for="ContactCategoryID" id="ContactCategoryID" asp-items="@(new SelectList(ViewBag.ContactCategoryList,"ContactCategoryID","ContactCategoryName"))">
                    <option value="">Select Category</option>
                </select>
            </div>
            <input type="submit" class="btn btn-success" />
            <input type="submit" class="btn btn-danger mx-3" asp-controller="CON_Contact" asp-action="Index" value="Back to Page"/>

        </form>
    </div>
</section>


<script>
    function fnonStateChange() {
        var CountryID = $("#CountryID").val();

        if (CountryID !== "") {
            $("#StateID").empty();
            $("#StateID").append($("<option></option>").val("").html("Select State"));
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("DropdownByCountry", "CON_Contact")" + "?&CountryID=" + CountryID,
                    data: {},
                    datatype: "json",
                    success: function (Result) {
                        $.each(Result,
                            function (key, value) {
                                $("#StateID").append($("<option></option>").val(value.stateID).html(value.stateName));
                            });
                    },
                    error: function (r) {
                        alert("Error while loading combobox.");
                    }
                });
        }
        else {
            $("#StateID").empty();
            $("#StateID").append($("<option></option>").val("").html("Select State"));
        }
    }
</script>

<script>
    function fnonCityChange() {
        var StateID = $("#StateID").val();

        if (StateID !== "") {
            $("#CityID").empty();
            $("#CityID").append($("<option></option>").val("").html("Select City"));
            $.ajax(
                {
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("DropdownByState", "CON_Contact")" + "?&StateID=" + StateID,
                    data: {},
                    datatype: "json",
                    success: function (Result) {
                        $.each(Result,
                            function (key, value) {
                                $("#CityID").append($("<option></option>").val(value.cityID).html(value.cityName));
                            });
                    },
                    error: function (r) {
                        alert("Error while loading combobox.");
                    }
                });
        }
        else {
            $("#CityID").empty();
            $("#CityID").append($("<option></option>").val("").html("Select City"));
        }
    }
</script>