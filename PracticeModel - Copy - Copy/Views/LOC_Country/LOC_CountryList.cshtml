@{
    ViewData["Title"] = "LOC_CountryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable
<section style="position:relative;top:50px;">
    <div class="d-flex container">
        <div class="fw-bold fs-3">Country List</div>
        <div class="position-absolute" style="right:0%;">

            <a asp-controller="LOC_Country" asp-action="Add" class="btn btn-success">
                <div class="d-flex">
                    <div class="mx-1 py-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg " viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                        </svg>
                    </div>
                    <div class="mx-1 text-light fw-bold py-1">
                        Add Country
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="input-group mb-2 my-5 " style="width:30%;float:right;">
        <lable class="input-group-text" for="sampleSearch">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
        </lable>
        <input type="text" name="sampleSearch" class="form-control" id="sample_1" placeholder="Search for Countries..." aria-label="name" aria-describedby="basic-addon1">
    </div>
    <table class="table table-hover my-lg-5" id="sample_1">
        <thead>
            <tr class="table-secondary text-center ">
                @*<th scope="col" class="py-4">Country ID</th>*@
                <th scope="col" class="py-4">Country Name</th>
                <th scope="col" class="py-4">Country Code</th>
                <th scope="col" class="py-4">Creation Date</th>
                <th scope="col" class="py-4">Modification Date</th>
                <th scope="col" class="py-4">Action</th>
            </tr>
        </thead>
        <tbody id="sample_2">
            @foreach (DataRow dr in Model.Rows)
            {
                <tr class="table-light table-striped text-center">
                    @*<td class="py-4">@dr["CountryID"]</td>*@
                    <td class="py-4">@dr["CountryName"]</td>
                    <td class="py-4">@dr["CountryCode"]</td>
                    <td class="py-4">@Convert.ToDateTime(dr["CreationDate"]).ToString("D")</td>
                    <td class="py-4">@Convert.ToDateTime(dr["ModificationDate"]).ToString("D")</td>
                    <td class="d-flex" style="margin:auto; justify-content:center;">
                        <form method="post" asp-controller="LOC_Country" asp-action="Delete">
                            <input type="hidden" name="CountryID" value="@Convert.ToInt32(dr["CountryID"])" />
                            <button type="submit" class="btn btn-danger my-3 mx-2" onclick="return confirm('Are you sure you want to delete ?')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                    <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                </svg>
                            </button>
                        </form>
                        <form method="post" asp-controller="LOC_Country" asp-action="Add">
                            <input type="hidden" name="CountryID" value="@Convert.ToInt32(dr["CountryID"])" />
                            <button type="submit" class="btn btn-secondary my-3 mx-2" asp-controller="LOC_Country" asp-action="Add" asp-route-countryid="@Convert.ToInt32(dr["CountryID"])">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>

                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}