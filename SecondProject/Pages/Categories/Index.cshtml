@page
@model SecondProject.Pages.Categories.IndexModel


<div class="container m-5">
    <div class="row">
        <div class="col-6">
            <h3>Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"> Create Category </a>
        </div>
    </div>

    <table class="table table-border table-striped mt-4 text-center">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <a asp-page="Edit" asp-route-id=@obj.Id  class="btn btn-primary     "><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-page="Delete" asp-route-id=@obj.Id class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
